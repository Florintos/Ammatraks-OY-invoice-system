<Window x:Class="AmmatraksOY_InvoiceApplication.View.AddInvoiceDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmmatraksOY_InvoiceApplication.View"
        mc:Ignorable="d"
        Title="AddInvoiceDataWindow" Height="400" Width="400">
    <StackPanel>

        <!-- Invoice ID -->
        <TextBlock Text="Invoice ID:" Margin="10"/>
        <TextBox x:Name="txtInvoiceID" Margin="10" VerticalAlignment="Center" Width="200"/>

        <!-- Invoice date -->
        <TextBlock Text="Invoice Date (YYYY-MM-DD):" Margin="10"/>
        <TextBox x:Name="txtInvoiceDate" Margin="10" VerticalAlignment="Center" Width="200"/>

        <!-- Expected Payment date -->
        <TextBlock Text="Expected payment Date (YYYY-MM-DD):" Margin="10"/>
        <TextBox x:Name="txtInvoicePayment" Margin="10" VerticalAlignment="Center" Width="200"/>

        <!-- Save Button -->
        <Button Content="Save" Margin="0,25,0,0" VerticalAlignment="Center" Width="75" Click="btnSave_Click"/>
    </StackPanel>
</Window>
